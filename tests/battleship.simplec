
/* count the number of contiguous Xs in a 2D array, where touching means
 * horizontally or vertically adjacent.  */

countContiguousXs(board, length, height)
    : function(pointer<pointer<char>>, int, int) -> int {
  int count;
  int i;
  int j;
  i = 0;
  count = 0;
  while (i < length) {
    j = 0;
    while (j < height) {
      if ((int)board[i][j] == (int)'X') {
        count = count + 1;
      }
      if ((i - 1 >= 0 && (int)board[i - 1][j] == (int)'X') ||
          (j - 1 >= 0 && ((int)board[i][j - 1] == (int)'X'))) {
        count = count - 1;
      }
    }
  }
  return count;
}

main { return 0; }